@model IEnumerable<SofTechCore21MVC.Models.ShoppingCart>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Email)
                </td>
                <td>
                    @{
                        string customer = (string)ViewBag.Customer;
                        if (customer == null)
                        {
                            <a asp-action="Edit" asp-route-id="@item.ShoppingCartID">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ShoppingCartID"> Details </a>
                            <a asp-action="Delete" asp-route-id="@item.ShoppingCartID"> Delete </a>
                        }
                        else
                        {
                            <a asp-action="OrderItems" asp-route-id="@item.ShoppingCartID">Details</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
